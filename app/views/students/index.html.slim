h1= @cohort.name
table.table
  thead
    tr
      th
      th Name
      th Email
      th Phone
      th GitHub Username

  tbody
    - @students.each do |student|
      - present student, UserPresenter do |student_presenter|
        tr
          td = student_presenter.image_for_index_page
          td
            - if teacher?
              = link_to student_presenter.full_name, teacher_student_path(student)
            - else
              = student_presenter.full_name
          td = student_presenter.email
          td = student_presenter.phone_number
          td = student_presenter.github_info

