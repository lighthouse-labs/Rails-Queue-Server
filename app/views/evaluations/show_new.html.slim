- title "#{@evaluation.student.full_name} #{@project.name} Eval"

- provide :body_class, 'project-evals-show-new'

- content_for :side_nav do
  = render('shared/menus/project_side_menu', project: @evaluation.project)

h3.project_eval_header = "#{@evaluation.student.full_name}'s #{@project.name} (Eval)"

== render 'details'

ul.nav.nav-tabs role="tablist" id="studentTab"
  - if @evaluation.completed?
    li.nav-item role="presentation"
      a.nav-link.active href="#details" aria-controls="project" role="tab" data-toggle="tab"
        | Evaluation Details
  li.nav-item role="presentation"
    a.nav-link href="#project" aria-controls="project" role="tab" data-toggle="tab" class=(@evaluation.completed? ? '' : 'active')
      | Project Description

.tab-content

  - if @evaluation.completed?
    #details.tab-pane.mt-3.p-2 role="tabpanel" class="active"
      h3 Evaluation Details
      == render 'result_details', view_only: true

  #project.tab-pane.mt-3.p-2 role="tabpanel" class=(@evaluation.completed? ? '' : 'active')
    h3 Project Description
    .instructions
      == markdown(@project.description)
