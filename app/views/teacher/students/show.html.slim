- provide :body_class, 'student-stats'
- title "#{@student.full_name}"

- present(@student) do |student_presenter|

  .col-md-9
    .student-heading
      = student_presenter.avatar
      .student-info-holder
        = student_presenter.name
        = student_presenter.cohort_name_link
        br
        = student_presenter.cohort_date_link
      = student_presenter.day_button
      ul.nav.nav-tabs role="tablist"
        li.active role="presentation"
          a href="#prep_stats" aria-controls="" role="tab" data-toggle="tab" Prep
        li role="presentation"
          a href="#bootcamp_stats" aria-controls="" role="tab" data-toggle="tab" Bootcamp
      .stats-holder
        .tab-content
            .tab-pane.active#prep_stats role="tabpanel"
              = student_presenter.prep_activity_stats
              = student_presenter.prep_quiz_stats
            .tab-pane#bootcamp_stats role="tabpanel"
              = student_presenter.activity_stats
              = student_presenter.quiz_stats
              = student_presenter.assistance_stats

    .student-results
      ul.nav.nav-tabs role="tablist"
        li.active role="presentation"
          a href="#outcomes" aria-controls="" role="tab" data-toggle="tab" Outcomes
        li role="presentation"
          a href="#completion" aria-controls="" role="tab" data-toggle="tab" Completion
        li role="presentation"
          a href="#bootcamp_submissions" aria-controls="" role="tab" data-toggle="tab" Tech Interviews
        li role="presentation"
          a href="#prep_submissions" aria-controls="" role="tab" data-toggle="tab" Prep

      .tab-content
        .tab-pane.active#outcomes role="tabpanel"
          = student_presenter.outcomes_table
        .tab-pane#completion role="tabpanel"
          p this is some content completion
        .tab-pane#bootcamp_submissions role="tabpanel"
          = student_presenter.tech_interview_table
        .tab-pane#prep_submissions role="tabpanel"
          = student_presenter.prep_table

  .col-md-3
    .titled-panel.contact
      p.title Contact Info
      = student_presenter.contact
    .titled-panel
      p.title Bio / About
