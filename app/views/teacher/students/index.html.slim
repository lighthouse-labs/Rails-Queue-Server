header.page-header
  h1 Search for a Student

.card.mb-3
  .card-header
    = render 'filters'

.row
  .col-sm-12
    .card
      .card-header
        h3.card-title.m-0
          | Students
          = " (showing #{@students.count} results)"

      .card-body
        table.table.students
          thead
            tr
              th Name
              th Links
              th Cohort
              th Status
          tbody
            = render partial: 'student', collection: @students
