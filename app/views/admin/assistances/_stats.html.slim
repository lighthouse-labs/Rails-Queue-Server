.summary-stats
  .stat.card
    .card-body
      h3
        i.fa.fa-comments
        | &nbsp;
        = @assistance_count
      span Total Assistances

  .stat.card
    .card-body
      h3
        i.fa.fa-calculator
        | &nbsp;
        = seconds_to_formatted_time(@average_secs_in_queue)
      span Average Time in Queue

  .stat.card
    .card-body
      h3
        i.fa.fa-star
        | &nbsp;
        = @avg_l_score
      span Average L-Score

  .stat.card
    .card-body
      h3
        i.far.fa-clock
        | &nbsp;
        - if @assist_length_avg.nan?
          = "N/A"
        - else
          = "#{@assist_length_avg.to_i} mins"
      span Average Length

  .stat.card
    .card-body
      h3
        i.fa.fa-users
        | &nbsp;
        = @distinct_students
      span Students

  .stat.card
    .card-body
      h3
        i.fa.fa-life-ring
        | &nbsp;
        = @distinct_teachers
      span Mentors
